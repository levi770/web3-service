<div class="custom-container">
    <h1 class="text-center m-4">Highloop.io Web3Service</h1>
    <div>
        <h3 class="text-center">Export data Form</h3>
        <br>
        {{#if success}}
        <div class="alert alert-success alert-dismissible fade show">
            <strong>{{success}}</strong>
        </div>
        {{/if}}
        {{#if error}}
        <div class="alert alert-danger alert-dismissible fade show">
            <strong>{{error}}</strong>
        </div>
        {{/if}}

        <form action="" id="export" method="POST">
            <div class="form-group">
                <select class="form-select form-select-lg mb-3" name="type" id="type" aria-label="Default select example">
                    <option selected>Select data type</option>
                    <option value="accounts">Accounts</option>
                    <option value="contracts">Contracts</option>
                    <option value="tokens">Tokens</option>
                    <option value="metadata">Metadata</option>
                    <option value="whitelist">Whitelists</option>
                </select>
            </div>
            <div class="form-group zip form-check form-switch">
                <input class="form-check-input" type="checkbox" name="zip_checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">
                    Wrap data in zip archive
                </label>
            </div>
            <div class="form-group">
                <input type="zip_password" class="form-control form-control-lg" name="zip_password" id="zip_password"
                    placeholder="Enter a password for zip archive">
            </div>
            <div class="form-group d-grid gap-2 form-btn">
                <input type="submit" value="Export" class="btn btn-outline-dark btn-lg btn-block">
            </div>
        </form>
    </div>
</div>