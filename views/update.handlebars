<div class="custom-container">
    <h1 class="text-center m-4">Highloop.io Web3Service</h1>
    <div>
        <h3 class="text-center">Update password form</h3>
        <br>
        {{#if success}}
        <div class="alert alert-success alert-dismissible fade show">
            <strong>{{success}}</strong>
        </div>
        {{/if}}
        {{#if error}}
        <div class="alert alert-danger alert-dismissible fade show">
            <strong>{{error}}</strong>
        </div>
        {{/if}}

        <form action="" id="update" method="POST">
            <div class="form-group">
                <input type="email" class="form-control form-control-lg" name="email" id="email" placeholder="Enter your Exclusible email">
            </div>
            <div class="form-group d-grid gap-2">
                <input type="submit" value="Update password" class="btn btn-outline-dark btn-lg btn-block">
            </div>
        </form>
    </div>
</div>

