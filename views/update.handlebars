<div class="custom-container">
    <h1 class="text-center m-4">Highloop.io Web3Service</h1>
    <div>
        <h3 class="text-center">Password update Form</h3>
        <br>
        {{#if success}}
        <div class="alert alert-success alert-dismissible fade show">
            <strong>{{success}}</strong>
            <button class="close" data-dismiss="alert"><span>&times;</span></button>
        </div>
        {{/if}}
        {{#if error}}
        <div class="alert alert-danger alert-dismissible fade show">
            <strong>{{error}}</strong>
            <button class="close" data-dismiss="alert"><span>&times;</span></button>
        </div>
        {{/if}}

        <form action="" id="update" method="POST">
            <div class="form-group">
                <label for="email">Email Id <span class="text-danger">*</span></label>
                <input type="email" class="form-control" name="email" id="email" placeholder="Enter your email id">
            </div>
            <div class="form-group">
                <input type="submit" value="Update password" class="btn btn-outline-dark btn-lg btn-block">
            </div>
        </form>
    </div>
</div>