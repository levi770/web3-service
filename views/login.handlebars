<div class="custom-container">
    <h1 class="text-center m-4">Highloop.io Web3Service</h1>
    <div>
        <h3 class="text-center">Login Form</h3>
        <br>
        {{#if success}}
        <div class="alert alert-success alert-dismissible fade show">
            <strong>{{success}}</strong>
        </div>
        {{/if}}
        {{#if error}}
        <div class="alert alert-danger alert-dismissible fade show">
            <strong>{{error}}</strong>
        </div>
        {{/if}}

        <form action="" id="login" method="POST">
            <div class="form-group">
                <input type="email" class="form-control form-control-lg" name="email" id="email" placeholder="Enter your Exclusible email">
            </div>
            <div class="form-group">
                <input type="password" class="form-control form-control-lg" name="password" id="password" placeholder="Enter Your Password">
            </div>
            <div class="form-group d-grid gap-2">
                <input type="submit" value="Login" class="btn btn-outline-dark btn-lg btn-block">
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-8">
                        <a href="/auth/update">update password</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>